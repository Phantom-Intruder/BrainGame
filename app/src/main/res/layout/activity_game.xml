<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coursework.com.braingame.GameActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <Button
        android:text="@string/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/number_2"
        android:layout_toEndOf="@+id/number_2"
        android:id="@+id/number_3"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonThreeClicked"/>

    <Button
        android:text="@string/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_9"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:layout_alignBaseline="@+id/number_8"
        android:layout_alignBottom="@+id/number_8"
        android:layout_toEndOf="@+id/number_8"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonNineClicked"/>

    <Button
        android:text="@string/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_5"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:layout_alignBaseline="@+id/number_4"
        android:layout_alignBottom="@+id/number_4"
        android:layout_toEndOf="@+id/number_4"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonFiveClicked"/>

    <Button
        android:text="@string/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_4"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/number_2"
        android:layout_alignStart="@+id/number_1"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonFourClicked"/>

    <Button
        android:text="@string/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_7"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/number_5"
        android:layout_toStartOf="@+id/number_8"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonSevenClicked"/>

    <Button
        android:text="@string/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:id="@+id/DEL_button"
        android:layout_below="@+id/number_7"
        android:layout_alignStart="@+id/number_7"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonDelClicked"/>

    <Button
        android:text="@string/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_0"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:layout_alignBaseline="@+id/DEL_button"
        android:layout_alignBottom="@+id/DEL_button"
        android:layout_toEndOf="@+id/DEL_button"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonZeroClicked"/>

    <Button
        android:text="@string/hash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/number_0"
        android:layout_toEndOf="@+id/number_0"
        android:id="@+id/hash_button"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonHashClicked"/>

    <Button
        android:text="@string/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_6"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:layout_alignBaseline="@+id/number_5"
        android:layout_alignBottom="@+id/number_5"
        android:layout_toEndOf="@+id/number_5"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonSixClicked"/>

    <Button
        android:text="@string/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_8"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:layout_alignBaseline="@+id/number_7"
        android:layout_alignBottom="@+id/number_7"
        android:layout_toEndOf="@+id/number_4"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonEightClicked"/>

    <Button
        android:text="@string/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:layout_alignTop="@+id/hash_button"
        android:layout_toEndOf="@+id/hash_button"
        android:id="@+id/minus_button"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonMinusClicked"/>

    <Button
        android:text="@string/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_2"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_alignBaseline="@+id/number_1"
        android:layout_alignBottom="@+id/number_1"
        android:layout_toEndOf="@+id/number_1"
        android:onClick="onButtonTwoClicked"/>

    <Button
        android:text="@string/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:id="@+id/number_1"
        style="@style/Widget.AppCompat.Button.Small"
        android:onClick="onButtonOneClicked"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_text"
        android:layout_marginBottom="42dp"
        android:textSize="24sp"
        android:layout_above="@+id/text_entry_area"
        android:layout_toStartOf="@+id/number_0" />

    <TextView
        android:text="@string/time_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_remaining"
        android:textSize="14sp"
        android:layout_marginStart="29dp"
        android:layout_above="@+id/result_text"
        android:layout_toEndOf="@+id/number_0" />

    <TextView
        android:text="@string/secs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seconds"
        android:layout_alignBottom="@+id/result_text"
        android:layout_alignEnd="@+id/time_remaining"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/seconds"
        android:layout_alignBottom="@+id/seconds"
        android:layout_toStartOf="@+id/seconds"
        android:layout_marginEnd="13dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result"
        android:id="@+id/progressBar"
        android:layout_alignEnd="@+id/seconds"
        android:layout_toEndOf="@+id/number_0" />

    <TextView
        android:text="@string/guess_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guess"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="24sp"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/number_1"
        android:layout_toStartOf="@+id/number_4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/text_entry_area"
        android:text="@string/question_mark"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/guess"
        android:layout_alignBottom="@+id/guess"
        android:layout_toEndOf="@+id/result_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/DEL_button"
        android:layout_marginBottom="25dp"
        android:id="@+id/textView3" />

</RelativeLayout >
