<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coursework.com.braingame.LevelActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <Button
        android:text="@string/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/level_medium"
        android:background="@drawable/btn_blue"
        android:textColor="#fff"
        android:layout_below="@+id/level_easy"
        android:layout_alignStart="@+id/level_easy"
        android:onClick="mediumButtonClicked"/>

    <Button
        android:text="@string/guru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_guru"
        android:layout_below="@+id/level_medium"
        android:layout_alignStart="@+id/level_medium"
        android:background="@drawable/btn_blue"
        android:textColor="#fff"
        android:layout_marginTop="51dp"
        android:onClick="guruButtonClicked"/>

    <Button
        android:text="@string/novice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:id="@+id/level_novice"
        android:background="@drawable/btn_blue"
        android:textColor="#fff"
        android:onClick="noviceButtonClicked"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:background="@drawable/btn_blue"
        android:textColor="#fff"
        android:id="@+id/level_easy"
        android:onClick="easyButtonClicked"
        android:layout_below="@+id/level_novice"
        android:layout_alignStart="@+id/level_novice" />
</RelativeLayout>
