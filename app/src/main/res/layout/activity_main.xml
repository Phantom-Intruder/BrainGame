
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="coursework.com.braingame.MainActivity">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
        </LinearLayout>

        <Button
            android:text="@string/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_exit"
            android:onClick="exitButtonClicked"
            android:layout_marginBottom="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button_new_game"
            android:layout_alignEnd="@+id/button_about" />

        <Button
            android:text="@string/continue_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_continue"
            android:onClick="continueButtonClicked"
            android:layout_marginBottom="50dp"
            android:layout_above="@+id/button_new_game"
            android:layout_alignStart="@+id/button_new_game" />

        <Button
            android:text="@string/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_new_game"
            android:onClick="newGameButtonClicked"
            android:layout_marginBottom="55dp"
            android:layout_above="@+id/button_about"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_about"
            android:onClick="aboutButtonClicked"
            android:layout_marginBottom="48dp"
            android:layout_above="@+id/button_exit"
            android:layout_alignStart="@+id/button_new_game" />
    </RelativeLayout>
